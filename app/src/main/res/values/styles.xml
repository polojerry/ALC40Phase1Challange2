<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher_drawable</item>
    </style>

    <style name="AppTheme.Fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:src">@drawable/ic_add_black_24dp</item>
        <item name="elevation">8dp</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>

</resources>
